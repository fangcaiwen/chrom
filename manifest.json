{
  "name": "自创浏览器插件",
  "version": "1.0.0",
  "description": "Gets information from Google.try change Google",
  "icons": {
    "128": "images/icon_16.png",
    "128": "images/icon_32.png",
    "128": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": ["contextMenus","https://*.google.com/", "activeTab","storage","declarativeContent","cookies","notifications"],
  "browser_action": {
    "default_icon": "images/icon_16.png",
    // 图标悬停时的标题，可选
    "default_title": "这是一个示例Chrome插件",
    "default_popup": "popup.html"
  },
  // "page_action": {
  //   "default_popup": "popup.html",
  //   "default_icon": {
  //     "16": "images/icon_16.png",
  //     "32": "images/icon_32.png",
  //     "48": "images/icon_48.png",
  //     "128": "images/icon_128.png"
  //   }
  // },
  // 只能指向一个HTML文件，不能是JS文件
  "devtools_page": "devtools.html",
  "homepage_url": "https://www.baidu.com",
  // 向地址栏注册一个关键字以提供搜索建议，只能设置一个关键字
  "omnibox": { "keyword" : "go111" }
 
}